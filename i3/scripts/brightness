#!/bin/bash

# Check for user click
if [ $BLOCK_BUTTON == 1 ]; then
	if [ `pgrep redshift` ]; then
		pkill redshift
	else
		redshift > /dev/null &
	fi
fi

# Determine icon
if [ `pgrep redshift` ]; then
	icon="<span color='white'><b>ðŸŒ™</b></span>"
else
	icon="<span color='white'><b>â˜€</b></span>"
fi

# Display brightness and correct icon
raw=`cat /sys/class/backlight/intel_backlight/brightness`

if [[ "$raw" == "" ]]; then
	echo "$icon 100%"
else
	brightness=$(($raw / 10 + 10))
	echo "$icon $brightness"
fi
